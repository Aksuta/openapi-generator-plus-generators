    "@types/less": "^3.0.1",
    "@types/lodash": "^4.14.149",
    "@types/marked": "^0.7.3",
    "@types/node": "^13.7.0",
    "@types/pluralize": "0.0.29",
    "@types/rimraf": "^3.0.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "glob-promise": "^3.4.0",
    "handlebars": "^4.7.6",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "maven": "karlvr/node-maven",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@openapi-generator-plus/generator-common": "file:packages/generator-common",
