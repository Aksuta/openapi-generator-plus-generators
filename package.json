{
  "name": "openapi-generator-plus-generators",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "link": "lerna clean --yes && npm link @openapi-generator-plus/core @openapi-generator-plus/types @openapi-generator-plus/indexed-type @openapi-generator-plus/testing openapi-generator-plus && lerna exec --concurrency 1 -- npm link && lerna clean --yes && rimraf packages/*/package-lock.json",
    "release": "npm run clean && npm run build && npm test && lerna publish",
    "test": "lerna run test",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "@openapi-generator-plus/core": "^0.14.0",
    "@openapi-generator-plus/types": "^0.14.0",
    "@openapi-generator-plus/testing": "^0.14.0",
